<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.sportsAppointment.mapper.SportsPlaceMapper">

    <resultMap type="com.design.sportsAppointment.pojo.SportsPlace" id="SportsPlaceMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="sportsId" column="sports_id" jdbcType="INTEGER"/>
        <result property="placeName" column="place_name" jdbcType="VARCHAR"/>
        <result property="images" column="images" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="startTime" column="start_time" jdbcType="VARCHAR"/>
        <result property="endTime" column="end_time" jdbcType="VARCHAR"/>
        <result property="sportsName" column="sports_name" jdbcType="VARCHAR"/>
        <result property="prices" column="prices" jdbcType="DOUBLE"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SportsPlaceMap">
        select
          *
        from sports_place
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sports_place(sports_id, place_name, images, created_at, created_by, start_time, end_time,prices)
        values (#{sportsId}, #{placeName}, #{images}, now(), #{createdBy}, #{startTime}, #{endTime},#{prices})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageListByCondition" resultMap="SportsPlaceMap">
        select a.*,b.sports_name  from sports_place a,sports b where a.sports_id=b.id
          <!--体育馆搜索 不为空 则进入搜索条件-->
          <if test="page.key.sportsId != null and page.key.sportsId != ''">
              and  a.sports_id = #{page.key.sportsId}
          </if>
          <!--场地搜索 不为空 则进入搜索条件-->
          <if test="page.key.placeName != null and page.key.placeName != ''">
              and  a.place_name = #{page.key.placeName}
          </if>
            <!--排序 desc是降序-->
        order by
        created_at desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageListCount" resultType="int">
        select count(a.id) as count from sports_place a,sports b where a.sports_id=b.id
        <!--体育馆搜索 不为空 则进入搜索条件-->
        <if test="page.key.sportsId != null and page.key.sportsId != ''">
            and  a.sports_id = #{page.key.sportsId}
        </if>
        <!--场地搜索 不为空 则进入搜索条件-->
        <if test="page.key.placeName != null and page.key.placeName != ''">
            and  a.place_name = #{page.key.placeName}
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="update">
        update sports_place
        <set>
            <if test="sportsId != null">
                sports_id = #{sportsId},
            </if>
            <if test="prices != null">
                prices = #{prices},
            </if>
            <if test="placeName != null and placeName != ''">
                place_name = #{placeName},
            </if>
            <if test="images != null and images != ''">
                images = #{images},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="startTime != null and startTime != ''">
                start_time = #{startTime},
            </if>
            <if test="endTime != null and endTime != ''">
                end_time = #{endTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sports_place where id = #{id}
    </delete>

</mapper>

